<Window x:Class="screenshot.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:screenshot"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        AllowsTransparency="True"
        WindowStyle="None"
        Background="Black"
        Opacity="0.3"
        WindowState="Maximized" MouseDown="Window_MouseDown" MouseMove="Window_MouseMove" Cursor="Cross">
    <Grid>
        <Canvas x:Name="CaptureCanvas" Margin="1,1,1,1"/>
    </Grid>
</Window>
